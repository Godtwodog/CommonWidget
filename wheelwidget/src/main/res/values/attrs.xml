<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="WheelViewWidget">
        <!--滚轮中item的字体大小-->
        <attr name="ItemTextSize" format="dimension"/>
<!--        滚轮中item的字体颜色-->
        <attr name="ItemTextColor" format="color"/>
<!--        控件是否循环滚动-->
        <attr name="ItemIsLoop" format="boolean"/>
<!--        间隔线颜色-->
        <attr name="IndicatorColor" format="color"/>
<!--      文本格式  -->
        <attr name="TextGravity" format="enum" >
            <enum name="CENTER" value="0" />
            <enum name="LEFT" value="1" />
            <enum name="RIGHT" value="2" />
        </attr>
<!--        未选中区域的字体颜色-->
        <attr name="ItemOutTextColor" format="color"/>
<!--        间隔线宽度-->
        <attr name="IndicatorWidth" format="dimension"/>
    </declare-styleable>
</resources>