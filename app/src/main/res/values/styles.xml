<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="BaseUserTabStyle">
        <item name="android:background">@color/baseUserTabBackgroundColor</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/baseUserTabHeight</item>
        <item name="android:paddingLeft">@dimen/baseUserTabPadding</item>
        <item name="android:paddingRight">@dimen/baseUserTabPadding</item>
        <item name="android:layout_marginTop">@dimen/baseUserTabTopMargin</item>
    </style>

    <style name="BaseUserTabMultiLineStyle">
        <item name="android:background">@color/baseUserTabBackgroundColor</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/baseUserTabMultiLineHeight</item>
        <item name="android:paddingLeft">@dimen/baseUserTabPadding</item>
        <item name="android:paddingRight">@dimen/baseUserTabPadding</item>
        <item name="android:layout_marginTop">@dimen/baseUserTabTopMargin</item>
    </style>

    <style name="BaseUserTabLeftTitleStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">@color/default_title_color</item>
        <item name="android:textSize">@dimen/defaultTitleSize</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="BaseUserTabRightArrowStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:paddingLeft">@dimen/defaultArrowPadding</item>
    </style>

    <style name="DXSFullScreen" parent="Theme.Design.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="ToolBarTheme" parent="Widget.AppCompat.Toolbar">

    </style>

    <style name="Calendar_Dialog" parent="Theme.AppCompat.Dialog">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowAnimationStyle">@style/DialogAnimation</item>
        <item name="android:gravity">bottom</item>
    </style>

</resources>
